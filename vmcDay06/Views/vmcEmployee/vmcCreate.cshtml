@model vmcDay06.Models.vmcEmployee

@{
    ViewData["Title"] = "Thêm mới nhân viên";
}

<h1>Thêm mới nhân viên</h1>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<form asp-action="vmcCreate" method="post" class="mt-4">
    <div class="mb-3">
        <label asp-for="vmcName" class="form-label">Họ tên</label>
        <input asp-for="vmcName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="vmcBirthDay" class="form-label">Ngày sinh</label>
        <input asp-for="vmcBirthDay" type="date" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="vmcEmail" class="form-label">Email</label>
        <input asp-for="vmcEmail" type="email" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="vmcPhone" class="form-label">Điện thoại</label>
        <input asp-for="vmcPhone" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="vmcSalary" class="form-label">Lương</label>
        <input asp-for="vmcSalary" type="number" class="form-control" />
    </div>
    <div class="mb-3 form-check">
        <input asp-for="vmcStatus" class="form-check-input" />
        <label asp-for="vmcStatus" class="form-check-label">Đang làm việc</label>
    </div>
    <button type="submit" class="btn btn-primary">Thêm mới</button>
    <a asp-action="vmcIndex" class="btn btn-secondary">Quay lại</a>
</form>