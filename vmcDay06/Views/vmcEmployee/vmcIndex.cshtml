@model IEnumerable<vmcDay06.Models.vmcEmployee>

@{
    ViewData["Title"] = "vmcIndex";
}

<h1>Danh sách nhân viên</h1>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<div class="mb-3">
    <a asp-action="vmcCreate" class="btn btn-success">Thêm mới nhân viên</a>
</div>
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Email</th>
            <th>Điện thoại</th>
            <th>Lương</th>
            <th>Trạng thái</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.vmcId</td>
                <td>@emp.vmcName</td>
                <td>@emp.vmcBirthDay.ToString("dd/MM/yyyy")</td>
                <td>@emp.vmcEmail</td>
                <td>@emp.vmcPhone</td>
                <td>@emp.vmcSalary.ToString("N0")</td>
                <td>
                    @(emp.vmcStatus ? "Đang làm" : "Nghỉ việc")
                </td>
            </tr>
        }
    </tbody>
</table>