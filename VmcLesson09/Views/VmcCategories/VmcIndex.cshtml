@model IEnumerable<VmcLesson09.Modelsss.Category>

@{
    ViewData["Title"] = "Thêm mới loại sách";
    Layout = "~/Views/Shared/_VmcLayout.cshtml";
}

<h1>Danh sách loại sách</h1>

<p>
    <a asp-action="VmcCreate">Thêm mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().CategoryId)</th>
            <th>@Html.DisplayNameFor(model => model.First().CategoryName)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(x => item.CategoryId)</td>
                    <td>@Html.DisplayFor(x => item.CategoryName)</td>
                    <td>
                        <a asp-action="VmcEdit" asp-route-id="@item.CategoryId">Sửa</a> |
                        <a asp-action="VmcDetails" asp-route-id="@item.CategoryId">Xem</a> |
                        <a asp-action="VmcDelete" asp-route-id="@item.CategoryId">Xóa</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="3">Không có dữ liệu</td></tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3">Tổng số: @Model?.Count() ?? 0</th>
        </tr>
    </tfoot>
</table>
